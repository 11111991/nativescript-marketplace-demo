<examples:ExamplePage
        xmlns="http://www.nativescript.org/tns.xsd"
        xmlns:examples="examples/example-base-page"
        navigatingTo="pageNavigatingTo"
        tap="tap">
    <Page.actionBar>
        <ActionBar title="User Profile">
            <NavigationButton icon="res://ic_back" tap="goBack" />
            <ActionBar.actionItems>
                <ActionItem ios:text="Done" android:text="SAVE" ios.position="right" tap="doneTapped" />
            </ActionBar.actionItems>
        </ActionBar>
    </Page.actionBar>
    <GridLayout cssClass="example-background">
        <ScrollView>
            <StackLayout cssClass="form-content">
                <!-- Picture -->
                <StackLayout orientation="horizontal">
                    <Image src="res://user" cssClass="profile-image" />
                    <Button text="Change image" cssClass="button-change-image" tap="changeImageTapped"/>
                </StackLayout>
                <StackLayout cssClass="line"/>
                <!-- Username -->
                <GridLayout columns="*" rows="auto, auto" verticalAlignment="top">
                    <Label text="Username" cssClass="field-title" />
                    <TextField id="username" text="{{ username }}" cssClass="field" android:row="1" tap="inputTap" />
                </GridLayout>
                <StackLayout cssClass="line"/>
                <!-- Email -->
                <GridLayout columns="*" rows="auto, auto" verticalAlignment="top">
                    <Label text="Email" cssClass="field-title" />
                    <TextField id="email" text="{{ email }}" cssClass="field" android:row="1" tap="inputTap" />
                </GridLayout>
                <StackLayout cssClass="line"/>
                <!-- Password -->
                <GridLayout columns="*" rows="auto, auto" verticalAlignment="top">
                    <Label text="Password" cssClass="field-title" />
                    <TextField id="password" col="1" text="{{ password }}" secure="{{ showPassword, !showPassword }}" cssClass="field" android:row="1" tap="inputTap" />
                </GridLayout>
                <StackLayout cssClass="line"/>
                <StackLayout orientation="horizontal">
                    <GridLayout tap="toggleShowPassword" horizontalAlignment="left">
                        <Image src="{{ showPassword ? 'res://checkbox_checked' : 'res://checkbox_unchecked' }}" cssClass="checkbox" />
                    </GridLayout>
                    <Label text="Show password" cssClass="field-switch-title" />
                </StackLayout>
                <StackLayout cssClass="line"/>
                <!-- Bio -->
                <StackLayout>
                    <Label text="Bio" cssClass="field-title" />
                    <TextView id="bio" text="{{ bio }}" android:hint="Add bio" ios:hint="Bio" cssClass="field-multiline" tap="inputTap" />
                </StackLayout>
                <StackLayout cssClass="line"/>
                <!-- Public -->
                <GridLayout columns="*, auto" rows="auto" verticalAlignment="top">
                    <Label text="Public profile" cssClass="field-switch-title" />
                    <Switch checked="{{ isPublic }}" cssClass="field-switch" />
                </GridLayout>
                <StackLayout cssClass="line"/>
            </StackLayout>
        </ScrollView>
    </GridLayout>
</examples:ExamplePage>
