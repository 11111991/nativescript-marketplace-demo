<GridLayout rows="auto, *" xmlns:chart="nativescript-telerik-ui/chart">
    <Label text="Performance summary, 2014" cssClass="chart-example-tytle-style"/>
    <chart:RadCartesianChart row="1">
        <chart:RadCartesianChart.series>
            <chart:BarSeries categoryProperty="Category" items="{{ categoricalSource }}" valueProperty="Amount">
                <chart:BarSeries.horizontalAxis>
                    <chart:CategoricalAxis/>
                </chart:BarSeries.horizontalAxis>
                <chart:BarSeries.verticalAxis>
                    <chart:LinearAxis/>
                </chart:BarSeries.verticalAxis>
            </chart:BarSeries>
        </chart:RadCartesianChart.series>
        <chart:RadCartesianChart.grid>
            <chart:RadCartesianChartGrid horizontalLinesVisible="true"/>
        </chart:RadCartesianChart.grid>
    </chart:RadCartesianChart>
</GridLayout>
