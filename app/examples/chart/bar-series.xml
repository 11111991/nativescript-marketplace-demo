<examples:ExamplePage
        navigatingTo="pageNavigatingTo"
        xmlns:examples="examples/example-base-page"
        xmlns="http://www.nativescript.org/tns.xsd">
    <Page.actionBar>
        <ActionBar title="Bar series" automationText="ActionBar">
            <NavigationButton icon="res://ic_back" tap="goBack" automationText="GoBack" />
            <ActionItem id="exampleMenuButton" icon="res://ic_menu_example" ios.position="right" automationText="ExampleMenu" />
        </ActionBar>
    </Page.actionBar>
    <GridLayout loaded="rootGridLoaded" rows="auto, *">
        <GridLayout cssClass="repeaterItemsScrollerStyle" rows="*">
            <GridLayout cssClass="repeaterBottomBorderStyle" row="1"/>
            <ScrollView id="scrollView" orientation="horizontal" ios.showsHorizontalScrollIndicator="false" cssClass="galleryRepeaterStyle" loaded="scrollViewLoaded">
                <Repeater items="{{ barTypes }}" >
                    <Repeater.itemsLayout>
                        <StackLayout orientation="horizontal"/>
                    </Repeater.itemsLayout>
                    <Repeater.itemTemplate>
                        <GridLayout tap="repeaterItemTap">
                            <GridLayout cssClass="{{ isSelected ? 'chartItemInRepeaterSelectedStyle' : 'chartItemInRepeaterStyle' }}">
                                <Image src="{{ isSelected ? selectedImageRes : imageRes }}"/>
                            </GridLayout>
                            <GridLayout cssClass="{{isSelected ? 'galleryRepeaterItemBottomSelectedBorder' : 'galleryRepeaterItemBottomBorder'}}"/>
                            <GridLayout cssClass="galleryRepeaterItemRightBorder"/>
                            <GridLayout cssClass="galleryRepeaterItemLeftBorder"/>
                        </GridLayout>
                    </Repeater.itemTemplate>
                </Repeater>
            </ScrollView>
        </GridLayout>
        <GridLayout cssClass="chartExampleHolderStyle" id="exampleHolder" row="1" rows="*"></GridLayout>
    </GridLayout>
</examples:ExamplePage>
