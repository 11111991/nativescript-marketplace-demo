<GridLayout rows="auto, *" xmlns:chart="nativescript-telerik-ui/chart">
    <Label text="Spending on education" cssClass="chart-example-tytle-style"/>
    <chart:RadPieChart row="1" selectionMode="Single" margin="20">
        <chart:RadPieChart.series>
            <chart:DonutSeries showLabels="true" selectionMode="DataPoint" expandRadius="1.1" outerRadiusFactor="0.8" items="{{ pieSource3 }}" valueProperty="Amount" legendLabelProperty="Level">
                <chart:DonutSeries.labelStyle>
                    <chart:PointLabelStyle  margin="-40" textFormat="$%3.0f"  textColor="White" textSize="10"/>
                </chart:DonutSeries.labelStyle>
            </chart:DonutSeries>
        </chart:RadPieChart.series>

        <chart:RadPieChart.legend>
            <chart:RadLegendView position="Top" title="" height="150"/>
        </chart:RadPieChart.legend>

    </chart:RadPieChart>
</GridLayout>
