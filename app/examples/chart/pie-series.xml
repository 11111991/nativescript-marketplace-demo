<examples:ExamplePage loaded="onPageLoaded" xmlns:examples="examples/example-base-page" xmlns="http://www.nativescript.org/tns.xsd">
    <Page.actionBar>
        <ActionBar title="Pie series"/>
    </Page.actionBar>
    <GridLayout loaded="rootGridLoaded" rows="auto, *">
        <ScrollView orientation="horizontal">
            <Repeater items="{{ pieTypes }}">
                <Repeater.itemsLayout>
                    <StackLayout orientation="horizontal"/>
                </Repeater.itemsLayout>
                <Repeater.itemTemplate>
                    <GridLayout tap="repeaterItemTap">
                        <Image src="{{ isSelected ? selectedImageRes : imageRes }}"/>
                    </GridLayout>
                </Repeater.itemTemplate>
            </Repeater>
        </ScrollView>
        <GridLayout id="exampleHolder" rows="*" row="1">

        </GridLayout>
    </GridLayout>
</examples:ExamplePage>
