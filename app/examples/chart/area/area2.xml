<GridLayout  rows="auto, *" xmlns:chart="nativescript-telerik-ui/chart">
    <Label text="Monthly sales revenue, 2014" cssClass="chart-example-tytle-style"/>
    <chart:RadCartesianChart row="1" id="chart">
        <chart:RadCartesianChart.horizontalAxis>
            <chart:CategoricalAxis android:labelSize="30"/>
        </chart:RadCartesianChart.horizontalAxis>
        <chart:RadCartesianChart.verticalAxis>
            <chart:LinearAxis android:labelSize="30"/>
        </chart:RadCartesianChart.verticalAxis>
        <chart:RadCartesianChart.series>
            <chart:AreaSeries categoryProperty="Category" items="{{ areaSource }}" stackMode="Stack" valueProperty="Amount"/>
            <chart:AreaSeries categoryProperty="Category" items="{{ areaSource2 }}" stackMode="Stack" valueProperty="Amount"/>
        </chart:RadCartesianChart.series>
        <chart:RadCartesianChart.grid>
            <chart:RadCartesianChartGrid horizontalLinesVisible="true"/>
        </chart:RadCartesianChart.grid>
    </chart:RadCartesianChart>
</GridLayout>
