<GridLayout xmlns:chart="nativescript-telerik-ui/chart"  rows="auto, *">
    <Label text="Monthly sales revenue, 2014" cssClass="chart-example-tytle-style"/>
    <chart:CartesianChart row="1">
        <chart:CartesianChart.series>
            <chart:SplineAreaSeries categoryProperty="Category" items="{{ areaSource }}" valueProperty="Amount">
                <chart:AreaSeries.horizontalAxis>
                    <chart:CategoricalAxis/>
                </chart:AreaSeries.horizontalAxis>
                <chart:AreaSeries.verticalAxis>
                    <chart:LinearAxis/>
                </chart:AreaSeries.verticalAxis>
            </chart:SplineAreaSeries>
        </chart:CartesianChart.series>
        <chart:CartesianChart.grid>
            <chart:CartesianChartGrid
                horizontalLinesVisible="true"/>
        </chart:CartesianChart.grid>
    </chart:CartesianChart>
</GridLayout>
