<examples:ExamplePage loaded="onPageLoaded" xmlns:chart="nativescript-telerik-ui/chart" xmlns:examples="examples/example-base-page" xmlns="http://www.nativescript.org/tns.xsd">
    <Page.actionBar>
        <ActionBar title="Area series"/>
    </Page.actionBar>
    <GridLayout loaded="rootGridLoaded">
        <TabView loaded="onTabViewLoaded">
            <TabView.items>
                <TabViewItem title="First look">
                    <TabViewItem.view>
                        <StackLayout>
                            <Label text="Monthly sales revenue, 2014"/>
                            <chart:CartesianChart >
                                <chart:CartesianChart.series>
                                    <chart:AreaSeries categoryProperty="Category" items="{{ areaSource }}" valueProperty="Amount">
                                        <chart:AreaSeries.horizontalAxis>
                                            <chart:CategoricalAxis/>
                                        </chart:AreaSeries.horizontalAxis>
                                        <chart:AreaSeries.verticalAxis>
                                            <chart:LinearAxis/>
                                        </chart:AreaSeries.verticalAxis>
                                    </chart:AreaSeries>
                                </chart:CartesianChart.series>
                                <chart:CartesianChart.grid>
                                    <chart:CartersianChartGrid/>
                                </chart:CartesianChart.grid>
                            </chart:CartesianChart>
                        </StackLayout>
                    </TabViewItem.view>
                </TabViewItem>
                <TabViewItem title="Stack area">
                    <TabViewItem.view>
                        <StackLayout>
                            <Label text="Monthly sales revenue, 2014"/>
                            <chart:CartesianChart>
                                <chart:CartesianChart.horizontalAxis>
                                    <chart:CategoricalAxis/>
                                </chart:CartesianChart.horizontalAxis>
                                <chart:CartesianChart.verticalAxis>
                                    <chart:LinearAxis/>
                                </chart:CartesianChart.verticalAxis>
                                <chart:CartesianChart.series>
                                    <chart:AreaSeries categoryProperty="Category" items="{{ areaSource }}" stackMode="Stack" valueProperty="Amount"/>
                                    <chart:AreaSeries categoryProperty="Category" items="{{ areaSource2 }}" stackMode="Stack" valueProperty="Amount"/>
                                </chart:CartesianChart.series>
                                <chart:CartesianChart.grid>
                                    <chart:CartersianChartGrid/>
                                </chart:CartesianChart.grid>
                            </chart:CartesianChart>
                        </StackLayout>
                    </TabViewItem.view>
                </TabViewItem>
                <TabViewItem title="Stack 100 area">
                    <TabViewItem.view>
                        <StackLayout>
                            <Label text="Monthly sales revenue, 2014"/>
