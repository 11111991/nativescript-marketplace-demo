<GridLayout rows="auto, *" xmlns:chart="nativescript-telerik-ui/chart">
    <Label text="Monthly sales revenue, 2014" cssClass="chart-example-tytle-style"/>
    <chart:RadCartesianChart row="1">
        <chart:RadCartesianChart.verticalAxis>
            <chart:LinearAxis android:labelSize="36"/>
        </chart:RadCartesianChart.verticalAxis>
        <chart:RadCartesianChart.horizontalAxis>
            <chart:CategoricalAxis android:labelSize="36"/>
        </chart:RadCartesianChart.horizontalAxis>
        <chart:RadCartesianChart.series>
            <chart:SplineSeries categoryProperty="Category" items="{{ categoricalSource }}"  valueProperty="Amount"></chart:SplineSeries>
            <chart:SplineSeries categoryProperty="Category" items="{{ categoricalSource2 }}" valueProperty="Amount"></chart:SplineSeries>
        </chart:RadCartesianChart.series>
        <chart:RadCartesianChart.grid>
            <chart:RadCartesianChartGrid horizontalLinesVisible="true" verticalLinesVisible="true"/>
        </chart:RadCartesianChart.grid>
    </chart:RadCartesianChart>
</GridLayout>
