<Page 
    xmlns="http://www.nativescript.org/tns.xsd" 
    xmlns:lv="nativescript-telerik-ui/listview"
    loaded="onPageLoaded">
<Page.actionBar>
    <ActionBar title="layouts">
        <ActionBar.actionItems>
            <ActionItem text="linear" tap="onLinearLayoutTap"/>
            <ActionItem text="staggered" tap="onStaggeredLayoutTap"/>
            <ActionItem text="grid" tap="onGridLayoutTap"/>
        </ActionBar.actionItems>
    </ActionBar>
</Page.actionBar>
	<GridLayout rows="*">
        <lv:RadListView id="list-view" row="0" items="{{ pictures }}">
            <lv:RadListView.listViewLayout>
                <lv:ListViewLinearLayout scrollDirection="Vertical"/>
            </lv:RadListView.listViewLayout>
            <lv:RadListView.itemTemplate>
                <GridLayout rows="auto">
                    <ActivityIndicator/>
                    <!--<Image width="100" height="100" src="{{ groupKey ? '' : 'res://listview/layouts/' + category + '/' + photo}}"/>-->
                    <Image width="100" height="100" src="res://listview/layouts/breakfast/breakfast1.imageset/breakfast1"/>
                    <!--<Image setretch="aspectFill" src="{{ groupKey ? '' : 'res://' + photo}}"/>-->
                    <StackLayout>
                        <Label text="{{ title }}" />
                        <Label text="{{ author }}" />
                    </StackLayout>
                </GridLayout>
            </lv:RadListView.itemTemplate>
        </lv:RadListView>
    </GridLayout>
	
</Page>