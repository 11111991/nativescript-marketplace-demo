<examples:ExamplePage
        xmlns="http://www.nativescript.org/tns.xsd"
        xmlns:lv="nativescript-telerik-ui-pro/listview"
        xmlns:examples="examples/example-base-page"
        xmlns:f="fresco/fresco"
        navigatingTo="pageNavigatingTo"
        navigatedFrom="pageNavigatedFrom">
    <Page.actionBar>
        <ActionBar title="RECIPES" automationText="ActionBar">
            <NavigationButton icon="res://ic_back" tap="goBack" automationText="GoBack" />
            <ActionBar.actionItems>
                <ActionItem icon="{{isLinearActive ? 'res://ic_list_view' : 'res://ic_listview_layouts_list_1' }}" tap="onLinearLayoutTap" />
                <ActionItem icon="{{isWrapActive ? 'res://ic_listview_layouts_wrap' : 'res://ic_listview_layouts_wrap_1' }}" tap="onGridLayoutTap" />

                <ActionItem id="exampleMenuButton" icon="res://ic_menu_example" ios.position="right" automationText="ExampleMenu" />
            </ActionBar.actionItems>
        </ActionBar>
    </Page.actionBar>
	<GridLayout rows="*" backgroundColor="White">
        <lv:RadListView id="list-view" row="0" items="{{ pictures }}" marginRight="-2">
            <lv:RadListView.listViewLayout>
                <lv:ListViewLinearLayout scrollDirection="Vertical"/>
            </lv:RadListView.listViewLayout>
            <lv:RadListView.itemTemplate>
                    <GridLayout rows="*" columns="*" marginBottom="2" marginRight="2">
                        <f:FrescoDrawee
                           horizontalAlignment="stretch"
                           height="250"
                           imageUri="{{ photo ? 'res://' + photo : 'res://'}}"/>
                        <GridLayout verticalAlignment="bottom">
                            <StackLayout backgroundColor="#BBFFFFFF" paddingTop="8" paddingBottom="8" paddingLeft="16" paddingRight="16">
                                <Label text="{{ title }}" cssClass="recipeTitle" />
                                <Label text="{{ author }}" cssClass="recipeAuthor"/>
                            </StackLayout>
                        </GridLayout>
                   </GridLayout>
            </lv:RadListView.itemTemplate>
        </lv:RadListView>
    </GridLayout>
</examples:ExamplePage>
