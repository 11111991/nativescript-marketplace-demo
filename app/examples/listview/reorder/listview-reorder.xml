<Page
    xmlns="http://www.nativescript.org/tns.xsd"
	xmlns:lv="nativescript-telerik-ui/listview"
	loaded="onPageLoaded">
	<GridLayout rows="auto, *" backgroundColor="white">
		<GridLayout columns="*, *" marginBottom="8">
			<Button text="TO DO LIST" tap="onBtnTodoTap"/>
			<Button text="SHOPPING LIST" tap="onBtnShoppingTap" col="1"/>
		</GridLayout>
		<GridLayout rows="*" row="1">
			<lv:RadListView id="todo-list" items="{{ todoItems }}" swipeCells="true" cellReorder="true">
				<lv:RadListView.listViewLayout>
					<lv:ListViewLinearLayout />
				</lv:RadListView.listViewLayout>
				<lv:RadListView.itemTemplate>
					<StackLayout paddingBottom="2">
						<StackLayout backgroundColor="#FF88D4C4" padding="12">
							<Label text="{{ title }}"/>
						</StackLayout>
					</StackLayout>
				</lv:RadListView.itemTemplate>
				<lv:RadListView.itemSwipeTemplate>
					<GridLayout rows="*" columns="auto, *, auto" paddingBottom="2" verticalAlignment="stretch">
						<GridLayout backgroundColor="#FFFFA200" verticalAlignment="stretch">
							<Image android:src="res://ic_listview_reorder_complete" ios:src="res://listview/reorder/check-as-done-icon" stretch="none" verticalAlignment="stretch" horizontalAlignment="center"/>
						</GridLayout>
						<GridLayout backgroundColor="#FFE5503A" col="2" verticalAlignment="stretch">
							<Image android:src="res://ic_listview_reorder_delete" ios:src="res://listview/reorder/reorder-delete-icon" stretch="none" verticalAlignment="stretch" horizontalAlignment="center"/>
						</GridLayout>
					</GridLayout>
				</lv:RadListView.itemSwipeTemplate>
			</lv:RadListView>
			<lv:RadListView id="shopping-list" items="{{ shoppingItems }}" swipeCells="true" cellReorder="true">
				<lv:RadListView.listViewLayout>
					<lv:ListViewLinearLayout />
				</lv:RadListView.listViewLayout>
				<lv:RadListView.itemTemplate>
					<StackLayout paddingBottom="2">
						<StackLayout backgroundColor="#FFF3C7B9" padding="12">
							<Label text="{{ title }}"/>
						</StackLayout>
					</StackLayout>
				</lv:RadListView.itemTemplate>
				<lv:RadListView.itemSwipeTemplate>
					<GridLayout rows="*" columns="auto, *, auto" paddingBottom="2" verticalAlignment="stretch">
						<GridLayout backgroundColor="#FFFFA200" verticalAlignment="stretch">
							<Image android:src="res://ic_listview_reorder_complete" ios:src="res://listview/reorder/check-as-done-icon" stretch="none" verticalAlignment="stretch" horizontalAlignment="center"/>
						</GridLayout>
						<GridLayout backgroundColor="#FFE5503A" col="2" verticalAlignment="stretch">
							<Image android:src="res://ic_listview_reorder_delete"  ios:src="res://listview/reorder/reorder-delete-icon"  stretch="none" verticalAlignment="stretch" horizontalAlignment="center"/>
						</GridLayout>
					</GridLayout>
				</lv:RadListView.itemSwipeTemplate>
			</lv:RadListView>
		</GridLayout>
	</GridLayout>
</Page>