<Page xmlns="http://www.nativescript.org/tns.xsd"
        loaded="pageLoaded"
        navigatedTo="pageNavigatedTo"
        cssClass="detailPageStyle">

     <Page.actionBar>
        <ActionBar title="Reading list">
            <NavigationButton icon="res://ic_back" tap="onBackImageTap" automationText="GoBack" />
            <ActionBar.actionItems>
                <ActionItem android:icon="res://ic_listview_selection_fav" tap="onAddToFavouritesTap" />
                <ActionItem android:icon="res://ic_listview_selection_delete" tap="onDeleteTap" />
                <ActionItem id="exampleMenuButton" icon="res://ic_menu_example" ios.position="right" automationText="ExampleMenu" />
            </ActionBar.actionItems>
        </ActionBar>
    </Page.actionBar> 
    <GridLayout backgroundColor="#FFE4D8D4" verticalAlignment="stretch">
        <StackLayout rows="auto, *" orientation="vertical" >
            <Label text="{{ Title }}" cssClass="detailTitle" textWrap="true" />
            <Label text="{{ Content }}" cssClass="detailContent" textWrap="true" />
        </StackLayout>
    </GridLayout>
</Page>
