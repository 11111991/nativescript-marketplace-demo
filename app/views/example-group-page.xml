<Page xmlns="http://www.nativescript.org/tns.xsd" navigatedTo="pageNavigatedTo">
  <Page.actionBar>
    <ActionBar title="{{ title }}">
      <NavigationButton tap="navigateBack"/>
    </ActionBar>
  </Page.actionBar>
  <ScrollView orientation="vertical">
    <Repeater items="{{ examples }}">
      <Repeater.itemsLayout>
        <WrapLayout />
      </Repeater.itemsLayout>
      <Repeater.itemTemplate>
        <GridLayout rows="auto, auto" columns="auto" tap="navigateToExample">
          <Image src="{{ image }}" cssClass="example-image-big" />
          <Label text="{{ title }}" cssClass="example-title" row="1" />
        </GridLayout>
      </Repeater.itemTemplate>
    </Repeater>
  </ScrollView>
</Page>