<Page xmlns="http://www.nativescript.org/tns.xsd"
        cssClass="qsf-page"
        navigatingTo="pageNavigatingTo"
        color="{{ tint }}"
        backgroundColor="{{ tint }}"
        backgroundSpanUnderStatusBar="true">
    <Page.actionBar>
        <ActionBar cssClass="qsf-actionbar" android:title="Back to all">
            <NavigationButton text="Back to all" tap="navigateBack" icon="res://ic_arrow_back" />
        </ActionBar>
    </Page.actionBar>
    <GridLayout cssClass="content-background" backgroundImage="{{ 'res://bg_' + id }}">
        <StackLayout margin="12 0 0 16">
            <TextView text="{{ info }}" editable="false" cssClass="info-text" />
            <Button text="Documentation" cssClass="info-link-button" tag="{{ url }}" tap="openLink" />
        </StackLayout>
    </GridLayout>
</Page>