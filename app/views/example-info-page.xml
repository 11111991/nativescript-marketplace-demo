<Page xmlns="http://www.nativescript.org/tns.xsd" navigatedTo="pageNavigatedTo" loaded="pageLoaded">
  <Page.actionBar>
    <ActionBar title="Back to all" cssClass="transparent">
      <NavigationButton tap="navigateBack" icon="res://ic_arrow_back_chart" />
    </ActionBar>
  </Page.actionBar>
  <GridLayout rows="*, auto">
    <GridLayout rowSpan="2" cssClass="content-background" />
    <StackLayout margin="10 10 10 72">
      <Label text="{{ currentExample, currentExample.title }}" cssClass="title" />
      <TextView text="{{ currentExample, currentExample.info }}" editable="false" cssClass="info" />
      <Button text="View code" cssClass="link-button" tap="showCodeTap"/>
      <Button text="Documentation" cssClass="link-button" tag="http://docs.nativescript.org/" tap="openLink"/>
    </StackLayout>
    <ScrollView row="2" orientation="horizontal">
      <Repeater items="{{ examples }}" verticalAlignment="bottom" margin="10" id="examples-container">
        <Repeater.itemsLayout>
          <StackLayout id="thumbs-layout" orientation="horizontal" />
        </Repeater.itemsLayout>
        <Repeater.itemTemplate>
          <GridLayout rows="auto" tap="exampleTap">
            <Image src="{{ image }}" cssClass="example-image" />
            <GridLayout id="selected-example-border" cssClass="selected-example-border">
              <Image src="res://ic_fullscreen" verticalAlignment="bottom" horizontalAlignment="left" stretch="none" />
            </GridLayout>
          </GridLayout>
        </Repeater.itemTemplate>
      </Repeater>
    </ScrollView>
  </GridLayout>
</Page>