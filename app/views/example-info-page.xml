<Page xmlns="http://www.nativescript.org/tns.xsd"
    cssClass="qsf-page"
    backgroundColor="{{ group.tint }}"
    color="{{ group.tint }}"
    navigatingTo="pageNavigatingTo"
    loaded="pageLoaded">
  <Page.actionBar>
    <ActionBar>
      <NavigationButton text="Back to all" tap="navigateBack" icon="res://ic_arrow_back_chart" />
    </ActionBar>
  </Page.actionBar>
  <GridLayout rows="*, auto">
    <GridLayout rowSpan="2" cssClass="content-background">
      <AbsoluteLayout>
        <Image id="p1" src="res://particles/particle.01" stretch="none" left="20" top="20" />
        <Image id="p2" src="res://particles/particle.02" stretch="none" left="50" top="50" />
        <Image id="p3" src="res://particles/particle.03" stretch="none" left="80" top="80" />
        <Image id="p4" src="res://particles/particle.04" stretch="none" left="110" top="110" />
        <Image id="p5" src="res://particles/particle.05" stretch="none" left="140" top="140" />
      </AbsoluteLayout>
    </GridLayout>
    <StackLayout margin="0 0 0 16">
      <Label text="{{ currentExample, currentExample.title }}" cssClass="info-title" />
      <TextView text="{{ currentExample, currentExample.info }}" editable="false" cssClass="info-text" />
      <Button text="View code" cssClass="info-link-button" tap="showCodeTap"/>
      <Button text="Documentation" cssClass="info-link-button" tag="http://docs.nativescript.org/" tap="openLink"/>
    </StackLayout>
    <ScrollView row="2" orientation="horizontal">
      <Repeater items="{{ examples }}" verticalAlignment="bottom" margin="10" id="examples-container">
        <Repeater.itemsLayout>
          <StackLayout id="thumbs-layout" orientation="horizontal" />
        </Repeater.itemsLayout>
        <Repeater.itemTemplate>
          <GridLayout rows="auto" tap="exampleTap">
            <Image src="{{ image }}" cssClass="example-image" />
            <GridLayout id="selected-example-border" cssClass="selected-example-border">
              <Image src="res://ic_fullscreen" verticalAlignment="bottom" horizontalAlignment="left" stretch="none" />
            </GridLayout>
          </GridLayout>
        </Repeater.itemTemplate>
      </Repeater>
    </ScrollView>
  </GridLayout>
</Page>
