<Page xmlns="http://www.nativescript.org/tns.xsd" navigatedTo="pageNavigatedTo">
  <Page.actionBar>
    <ActionBar title="{{ currentExample, currentExample.title }}">
      <NavigationButton tap="navigateBack" />
    </ActionBar>
  </Page.actionBar>
  <GridLayout rows="*, auto">
    <StackLayout margin="10 10 10 72">
      <Label text="{{ currentExample, currentExample.title }}" cssClass="title" />
      <TextView text="{{ currentExample, currentExample.info }}" editable="false" cssClass="info" />
      <Button text="View code" cssClass="link-button" tap="showCodeTap"/>
      <Button text="Documentation" cssClass="link-button" tag="http://docs.nativescript.org/" tap="openLink"/>
    </StackLayout>
    <ScrollView row="2" orientation="horizontal">
      <Repeater items="{{ examples }}" verticalAlignment="bottom" margin="10" id="examples-container">
        <Repeater.itemsLayout>
          <StackLayout orientation="horizontal" />
        </Repeater.itemsLayout>
        <Repeater.itemTemplate>
          <GridLayout rows="auto" tap="exampleTap" cssClass="{{ isSelected ? 'selected-example' : 'unselected-example' }}">
            <Image src="{{ image }}" cssClass="example-image" />
            <GridLayout cssClass="selected-example-border" visibility="{{ isSelected ? 'visible' : 'collapsed' }}"/>             
            <Image src="~/images/expand.png" visibility="{{ isSelected ? 'visible' : 'collapsed' }}"
              verticalAlignment="bottom" horizontalAlignment="left" stretch="none" />
          </GridLayout>
        </Repeater.itemTemplate>
      </Repeater>
    </ScrollView>
  </GridLayout>
</Page>