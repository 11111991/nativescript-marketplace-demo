<Page xmlns="http://www.nativescript.org/tns.xsd"
      cssClass="qsf-page"
      backgroundColor="{{ group.tint }}"
      color="{{ group.tint }}"
      navigatingTo="pageNavigatingTo"
      backgroundSpanUnderStatusBar="true">
    <Page.actionBar>
        <ActionBar title="Example Info">
            <ActionBar.navigationButton>
                <NavigationButton ios:text="Back" android:icon="res://ic_arrow_back" android:tap="navigateBack" />
            </ActionBar.navigationButton>
        </ActionBar>
    </Page.actionBar>
    <GridLayout rows="*, auto" cssClass="content-background" backgroundImage="{{ 'res://bg_' + group.id }}">
        <StackLayout cssClass="marginated-content">
            <Label text="{{ currentExample, currentExample.title }}" cssClass="info-title" />
            <TextView text="{{ currentExample, currentExample.info }}" editable="false" cssClass="info-text" />
            <Button ios:text="View code" android:text="VIEW CODE" cssClass="info-link-button" tap="showCodeTap"/>
            <Button ios:text="Documentation" android:text="DOCUMENTATION" cssClass="info-link-button" tag="http://docs.nativescript.org/" tap="openLink"/>
        </StackLayout>
    </GridLayout>
</Page>
