<Page xmlns="http://www.nativescript.org/tns.xsd"
    cssClass="qsf-page"
    navigatedTo="pageNavigatedTo"
    backgroundColor="{{ tint }}">
    
    <Page.actionBar>
        <ActionBar title="{{ title }}" />
    </Page.actionBar>
    
    <GridLayout>
        <GridLayout cssClass="content-background" />
        <StackLayout margin="10 10 10 72">
            <TextView text="{{ info }}" editable="false" cssClass="info" />
            <Button text="Documentation" cssClass="link-button" tag="{{ url }}" tap="openLink" />
        </StackLayout>
    </GridLayout>
</Page>