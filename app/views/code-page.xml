<Page
    xmlns="http://www.nativescript.org/tns.xsd"
    cssClass="qsf-page"
    backgroundColor="{{ group.tint }}"
    color="{{ group.tint }}"
    navigatingTo="pageNavigatingTo"
    backgroundSpanUnderStatusBar="true">
    <Page.actionBar>
        <ActionBar title="Code">
            <ActionBar.navigationButton>
                <NavigationButton ios:text="Back" android:icon="res://ic_arrow_back" android:tap="navigateBack" />
            </ActionBar.navigationButton>
        </ActionBar>
    </Page.actionBar>
  <GridLayout rows="44, *" columns="*" cssClass="content-background-main">
    <Button text="{{ selectedFileName }}" tap="selectFile" />   
    <ActivityIndicator busy="{{ isLoading }}" />
    <WebView row="1" src="{{ formattedCode }}" />
  </GridLayout>
</Page>