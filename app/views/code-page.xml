<Page
    xmlns="http://www.nativescript.org/tns.xsd"
    cssClass="qsf-page"
    backgroundColor="{{ group.tint }}"
    color="{{ group.tint }}"
    navigatingTo="pageNavigatingTo"
    backgroundSpanUnderStatusBar="true">
  <Page.actionBar>
    <ActionBar title="View Code" />
  </Page.actionBar>
  <GridLayout rows="44, *" columns="*" cssClass="content-background">
    <Button text="{{ selectedFileName }}" tap="selectFile" />   
    <ActivityIndicator busy="{{ isLoading }}" />
    <WebView row="1" src="{{ formattedCode }}" />
  </GridLayout>
</Page>