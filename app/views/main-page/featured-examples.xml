<GridLayout>
    <ScrollView>
        <GridLayout>
            <Repeater items="{{ featuredExamples }}" margin="10">
                <Repeater.itemsLayout>
                    <WrapLayout
                        horizontalAlignment="left"
                        itemWidth="{{ (screenWidth - 20) / 2 }}"
                        itemHeight="{{ (screenWidth - 20) * 0.5 + 50 }}"/>
                </Repeater.itemsLayout>
                <Repeater.itemTemplate>
                    <GridLayout margin="6" rows="* 54" backgroundColor="white" touch="tileTouch" tap="navigateToExample" automationText="{{ title }}">
                        <Image src="{{ image }}" stretch="aspectFill" />
                        <Label row="1" margin="0 8" textWrap="true"
                            ios:style="text-align: center; font-size: 14;"
                            android:style="text-align: center; font-size: 15;"
                            horizontalAlignment="center" verticalAlignment="center" text="{{ title }}" />
                    </GridLayout>
                </Repeater.itemTemplate>
            </Repeater>
        </GridLayout>
    </ScrollView>
</GridLayout>